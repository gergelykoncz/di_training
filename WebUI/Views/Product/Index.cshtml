@model IEnumerable<DataAccess.Entities.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Add New Product", "Add")